services:
  postgres:
    image: postgres:18-alpine
    container_name: coverletter_postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: changeme  # ⚠️ Change this to a secure password for development
      POSTGRES_DB: coverletter_dev
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - coverletter_network

volumes:
  postgres_data:
    driver: local

networks:
  coverletter_network:
    driver: bridge
